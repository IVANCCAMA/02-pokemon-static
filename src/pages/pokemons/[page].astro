---
import type { GetStaticPaths } from "astro";
// Codigo Server Side Only - Momento de construccion BUILD TIME
// import Welcome from "../../components/Welcome.astro";
import Layout from "@layouts/Layout.astro";
import "../../styles/global.css";
import type { PokemonListResponse } from "@interfaces/pokemon-list.response";
import PokemonCard from "@components/pokemons/PokemonCard.astro";

export const getStaticPaths = (async ({ paginate }) => {
  const resp = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");
  const { results } = (await resp.json()) as PokemonListResponse;

  return paginate(results, { pageSize: 20 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
// console.log(page);
---

<Layout title="Pokémon Static | Home">
  <h1 class="text-3xl font-bold text-white-800">Listado de Pokémons</h1>
  <hr />

  <section
    aria-label="Listado de Pokémos"
    class="grid grid-cols-1 sm:grid-cols-4 md:grid-cols-5 gap-4 p-5"
  >
    <!-- En Astro no se usa el key como en React -->
    {page.data.map(({ name, url }) => <PokemonCard name={name} url={url} />)}
  </section>

  <section class="flex px-10 mt-10 gap-2 items-center">
    <a
      class:list={[
        "btn",
        {
          disabled: !page.url.prev,
        },
      ]}
      href={page.url.prev}>Anteriores</a
    >
    <a
      class:list={[
        "btn",
        {
          disabled: !page.url.next,
        },
      ]}
      href={page.url.next}>Siguiente</a
    >

    <div class="flex flex-1"></div>

    <span class="text-3xl font-bold">Página {page.currentPage}</span>
  </section>
</Layout>

<style>
  @reference "tailwindcss";

  .btn {
    @apply bg-blue-500 p-2 text-white rounded-md;
  }

  .disabled {
    @apply bg-gray-600 text-gray-400;
  }
</style>
